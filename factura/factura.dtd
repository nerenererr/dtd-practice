        <email>maria@email.com</email>
    </cliente>
    <productos>
        <producto>
            <nombre>Portátil Dell</nombre>
            <cantidad>1</cantidad>
            <precio>899.99</precio>
        </producto>
        <producto>
            <nombre>Ratón inalámbrico</nombre>
            <cantidad>2</cantidad>
